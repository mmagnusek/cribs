<li>
  <a class="product_image">
    <%= image_tag product.image.url(:medium) %>
  </a>

  <div class="product_info">
    <h3>
      <a href="leisure_detail.html">
        <%= product.name %>
      </a>
    </h3>
    <small>
      <%= product.description %>
    </small>
  </div>

  <div class="price_info">
    <a href="#">+ Add to wishlist</a>
    <button class="price_add" title="" type="button">
      <span class="pr_price">od $<%= product.price %></span>
      <span class="pr_add">Do košíka</span>
    </button>
  </div>

</li>
