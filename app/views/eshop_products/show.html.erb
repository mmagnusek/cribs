
      <!--PRODUCT DETAIL STARTS-->
      <div id="product_detail">
        <!--Product Left Starts-->
        <div class="product_leftcol"> <img src="images/pr_main.jpg">
          <ul class="pr_gallery">
            <li><a href="#"><img src="images/pr_gal1.jpg"></a></li>
            <li><a href="#"><img src="images/pr_gal2.jpg"></a></li>
            <li><a href="#"><img src="images/pr_gal3.jpg"></a></li>
          </ul>
        </div>
        <!--Product Left Ends-->
        <!--Product Right Starts-->
        <div class="product_rightcol"> <small class="pr_type">Formal Dress</small>
          <h1>
            <%= @product.name %>
          </h1>
          <p class="short_dc">
            <%= @product.description %>
          <div class="pr_price">
            <big>
              <%= @product.price %>
            </big>
            <!-- <small>$72.00</small> -->
          </div>
          <div class="size_info">
            <div class="size_sel">
              <label>VEĽKOSŤ :</label>
              <select>
                <option>VYBRAŤ</option>
                <option>32</option>
              </select>
            </div>
            <div class="color_sel">
              <label>FARBA :</label>
              <select>
                <option>VYBRAŤ</option>
                <option>CORAL</option>
              </select>
            </div>
          </div>
          <div class="qty_info">
            <div class="quantity">
              <label>Quantity :</label>
              <select>
                <option>1</option>
                <option>2</option>
              </select>
            </div>
          </div>
          <div class="add_to_buttons">
            <button onClick="parent.location='leisure_cart.html'" class="add_cart">Add to Cart</button>
          </div>
          <div class="product_overview">
            <h4>Quick Overview</h4>
            <ul>
              <li>Long sleeves with single button cuffs.</li>
              <li>Cuffs can be rolled up and secured with button-tabs.</li>
              <li>Standing collar with notched detailing.</li>
              <li>Front button placket.</li>
              <li>Hem is longer in back.</li>
            </ul>
          </div>
          <!--Options-->
          <div class="product_options">

          </div>
        <!--Product Right Ends-->

      </div>

      <!--PRODUCT DETAIL ENDS-->
      <!--Product List Starts-->
      <div class="products_list products_slider">
        <h2 class="sub_title">You might also like</h2>
        <ul id="first-carousel" class="first-and-second-carousel jcarousel-skin-tango">

          <% @products.each do |product| %>
            <%= render 'eshop_products/product_list', product: product %>
          <% end %>

        </ul>
      </div>
      <!--Product List Ends-->
